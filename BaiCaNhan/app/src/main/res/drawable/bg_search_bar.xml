<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đặt màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Đặt viền -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" />

    <!-- Đặt góc bo tròn -->
    <corners android:radius="12dp" />

    <!-- Đặt khoảng cách padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>